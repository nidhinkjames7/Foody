@model Foody.Models.Shops

@{
    // Layout = "~/Views/Home/Admin.cshtml";
    Layout = "~/Views/Home/MyLayout.cshtml";
}


@{
    ViewBag.Title = "Add";
}

<h2>****UPDATE SHOPS****</h2>
@using (Html.BeginForm("UpdateShopData", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <table>
    
    @{
        System.Data.DataTable dt = (System.Data.DataTable)ViewData["data"];
     }
        @foreach (System.Data.DataRow row in dt.Rows)
        {
            
            <tr>
                <td>ShopName</td>
                <td><input type="text" name="shop_name" value="@row["shop_name"]" /></td>
            </tr>
            <tr>
                <td>UserId</td>
                <td><input type="text" name="user_id" value="@row["user_id"]" /></td>
            </tr>
            <tr>
                <td>OwnerName</td>
                <td><input type="text" name="owner_name" value="@row["owner_name"]" /></td>
            </tr>
            <tr>
                <td>Address</td>
                <td><input type="text" name="address" value="@row["address"]" /></td>
            </tr>
            <tr>
                <td>Pincode</td>
                <td><input type="text" name="pincode" value="@row["pincode"]" /></td>
            </tr>
            <tr>
                <td>ShopType</td>
                <td><input type="text" name="shop_type" value="@row["shop_type"]" /></td>
            </tr>
            <tr>
                <td>Mobile</td>
                <td><input type="text" name="mobile" value="@row["mobile"]" /></td>
            </tr><tr>
                <td>Email</td>
                <td><input type="text" name="email" value="@row["email"]" /></td>
            </tr>
            <tr>
                <td>Registration No</td>
                <td><input type="text" name="registration_no" value="@row["registration_no"]" /></td>
            </tr>
            <tr>
                <td>Description</td>
                <td><input type="text" name="description" value="@row["description"]" /></td>
            </tr>
            <tr>
                <td>Logitude</td>
                <td><input type="text" name="logitude" value="@row["longitude"]" /></td>
            </tr>
            <tr>
                <td>Lattitude</td>
                <td><input type="text" name="latitude" value="@row["latitude"]" /></td>
            </tr>
        }
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" />
            </div>
        </div>
}
