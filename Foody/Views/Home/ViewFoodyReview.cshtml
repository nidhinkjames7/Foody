@{
    Layout = "~/Views/Home/Admin.cshtml";
}

@using (Html.BeginForm(FormMethod.Get))
{
    <center><h1>View Reviews</h1></center>
    <table align="center">
        <tr>
            <td>Review Id</td>
            <td>User Id</td>
            <td>Date</td>
            <td>Review</td>
        </tr>

        @{
    System.Data.DataTable dt = (System.Data.DataTable)ViewData["data"];
        }
        @foreach (System.Data.DataRow row in dt.Rows)
        {
            <tr>
                <td>@row["review_id"]</td>
                <td>@row["user_id"]</td>
                <td>@row["date"]</td>
                <td>@row["review_details"]</td>
            </tr>
        }

    </table>
}


