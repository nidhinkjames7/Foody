@model Foody.Models.ShopAdmin

@{
    Layout = "~/Views/Home/Admin.cshtml";
}

<h2>SHOP REGISTRATION</h2>
@using (Html.BeginForm("RegisterShopAdmin", "Home", FormMethod.Post))
