@{
    Layout = "~/Views/Home/MyLayout.cshtml";
}


@using (Html.BeginForm(FormMethod.Get))
{
    <center><h1>View Rating</h1></center>
    <table align="center">
        <tr>
            <td>Rating Id</td>
            <td>Shop Id</td>
            <td>User Id</td>
            <td>User Rating</td>
            <td>Rating Date</td>
        </tr>

        @{
    System.Data.DataTable dt = (System.Data.DataTable)ViewData["data"];
        }
        @foreach (System.Data.DataRow row in dt.Rows)
        {
            <tr>
                <td>@row["rating_id"]</td>
                <td>@row["shop_id"]</td>
                <td>@row["uid"]</td>
                <td>@row["user_rating"]</td>
                <td>@row["rating_date"]</td>
            </tr>
        }

    </table>
}

